// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  role Roles? @default(user)
  password String
  phoneNumber String?
  imageURL String? 
  category Category[]
  service Service[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("users")
}
model Category {
  id String @id @default(uuid())
  title String  @unique
  name String
  image String?
  userId String
  user User @relation(fields: [userId],references: [id])
  service Service[]
   createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("categorys")

}
model Service {
  id String @id @default(uuid())
  title String 
  name String
  categoryId String
  category Category @relation(fields: [categoryId],references: [id])
  description String
  userId String
  user User @relation(fields: [userId],references: [id])
  image String?
  price Float
  oldPrice Float
  location  String
  phoneNumber String
  review  String
  rating String
   createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("service")
}
enum Roles {
  admin
  super_admin
  user
}